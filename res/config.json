            }
          ]
        }
      ]
    },

    {
      "appliesTo": "TargetCMakeLists",
      "rules": [
        {
          "id": "CM001",
          "name:": "name of rule",
          "checks": [
            {
              "id": "C001",
              "config": {
                "commands": [
                  {
                    "name": "^add_library|add_executable$",
                    "occurences": 1
                  },
                  {
                    "name": "^target_link_libraries$",
                    "occurences": 1
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}