                  "eb_add_reqm2",
                  "eb_generate_datapool",
                  "eb_target_add_profiling",
                  "eb_install_set_interface_headers_filter",
                  "eb_install_library",
                  "eb_add_library",
                  "eb_set_folder",
                  "eb_create_release_target_script",
